#Koltuk sayısı:1250
#yatak sayısı:850
#dolap sayısı:350
koltuk=1250
yatak=850
dolap=350

def donem_basi_stok(koltuk,yatak,dolap):
    donemS=(koltuk+yatak+dolap)
    return donemS
def donem_sonu_stok(donem_basi_stok,koltuk,yatak,dolap):
    donemSon=(donem_basi_stok-(Ksatilanlar+Ysatilanlar+Dsatilanlar))
    return donemSon
def donem_ortalamasi(donem_sonu_stok,donem_basi_stok):
    donemOrt=((donem_sonu_stok+donem_basi_stok)/2)
    return donemOrt

Ysatilanlar=int(input("Yatak satışı: "))
Ksatilanlar=int(input("Koltuk satışı: "))
Dsatilanlar=int(input("Dolap satışı: "))

a=donem_basi_stok(koltuk,yatak,dolap)
b=donem_sonu_stok(a,koltuk,yatak,dolap)

print("Dönem başı stok: ",donem_basi_stok(koltuk,yatak,dolap))
print("Dönem sonu stok: ",donem_sonu_stok(a,koltuk,yatak,dolap))
print("Dönem ortalaması: ",donem_ortalamasi(b,a))

